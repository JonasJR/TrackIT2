<div id="submit">
  <h2>Submit
    <span class="spans">I</span>t</h2>
  <br>

  <%= form_for @newproposal, :html => { :class => "form-horizontal" } do |f| %>
  <div class="form-group">
    <div class="col-md-2">
      <%= f.label :title, "Title: ", class: "control-label" %>
    </div>
    <div class="col-md-6">
      <%= f.text_field :name, class: "form-control", required: true %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-md-2">
      <%= f.label :description, "Description: ", class: "control-label" %>
    </div>
    <div class="col-md-6">
      <%= f.text_area :description, class: "form-control", required: true  %>
    </div>
  </div>

  <% if @page == "student" %>

  <div class="form-group">
    <div class="col-md-2">
      <%= f.label :course, "Course: ", class: "control-label" %>
    </div>
    <div class="col-md-6">
      <%= f.text_field :course, class: "form-control", required: true %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-md-2">
      <%= f.label :category, "Category: ", class: "control-label" %>
    </div>
    <div class="col-md-6">
      <%= f.select(:category, options_for_select([['Thesis', 'Thesis'], ['Candidate', 'Candidate'],['Bachelor', 'Bachelor']]), {}, { class: "form-control" }) %>
    </div>
  </div>

<% else %>

  <div class="form-group">
    <div class="col-md-2">
      <%= f.label :company, "Company name: ", class: "control-label"%>
    </div>
    <div class="col-md-6">
      <%= f.text_field :company, class: "form-control", required: true %>
    </div>
  </div>
  <br>

  <% end %>

  <div class="row" id="submit_button">
    <%= f.submit "Submit", class: "col-xs-8 col-xs-offset-2 col-md-6 col-md-offset-2 btn btn-default btn-primary" %>
    <% end %>
  </div>
</div>
