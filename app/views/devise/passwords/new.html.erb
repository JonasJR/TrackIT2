<div class="sign-in max-width">
  <h2 class="center">Forgot your password?</h2>

  <%= render 'devise/shared/login_tabs' %>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= devise_error_messages! %>

    <div class="form-group input-group">
      <span class="input-group-addon">
        @
      </span>
      <%= f.email_field :email, class: 'form-control', autofocus: true, required: "", placeholder: 'Email' %>
    </div>

    <div class="form-group">
      <%= f.submit 'Send me user reset instructions', class: 'btn btn-primary btn-block' %>
    </div>
  <% end %>

</div>
